if [[ `grep 'master'` ]]; then 
  echo "You really don't want to push this branch. Aborting."
  exit 1
fi

if [[ ! -z "$(git diff --cached)" ]]; then
	echo 'There are staged changes. Please review first.'
	exit 2
fi

if [[ -f pom.xml ]]; then
	mvn clean verify

	if [[ $? -ne 0 ]]; then
		exit 3
  fi
fi
